    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "qrcode-terminal": "^0.12.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "twilio": "^4.23.0",
